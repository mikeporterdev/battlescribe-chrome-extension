{
  "compilerOptions": {
    "target": "es6",
    "removeComments": true,
    "lib": ["es2015", "es2017", "es2019", "dom", "dom.iterable"],
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUncheckedIndexedAccess": true
  },
  "exclude": [
    "node_modules"
  ]
}
